@model News_Online.Models.ArticleModel
@{
    ViewData["Title"] = "Bài viết";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<title>@ViewData["Title"]</title>
<style>
    .card-text iframe {
        width: 100%;
        height: 800px;
    }

    .card-text img {
        width: 800px;
    }

    @@media (max-width: 768px) {
        .card-text img {
            width: 100%;
        }
    }
</style>
<div class="card" style="margin-top: 10px;height: 800px;width: 100%;overflow: auto;">
    <div class="card-body">
        <div class="card-text">
            @Html.Raw(Model.Content_Article)
        </div>
    </div>
</div>